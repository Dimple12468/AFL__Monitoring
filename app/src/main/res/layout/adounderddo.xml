        android:layout_width="match_parent"
        android:layout_height="wrap_content"-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageuser"
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:src="@drawable/user_image" />

        <!--        <ImageView
                    android:layout_alignBottom="@id/tvuser"
                    android:id="@+id/edit_id"
                    android:src="@drawable/edit_ic"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground" />
                <ImageView
                    android:layout_alignBottom="@id/textViewAdo"
                    android:layout_marginRight="16dp"
                    android:id="@+id/delete_id"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/delete_ic"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_toLeftOf="@id/edit_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>-->

        <TextView
            android:id="@+id/textViewAdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/imageuser"
            android:background="@color/shimmer_bg"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ado_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewAdo"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/imageuser"
            android:background="@color/shimmer_bg"
            android:textSize="12sp" />

    </RelativeLayout>
    <!--/com.facebook.shimmer.ShimmerFrameLayout-->

</RelativeLayout>



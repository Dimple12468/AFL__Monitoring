    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="20dp">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.4"
            android:background="@drawable/rectanglebg"
            android:entries="@array/fire_status"
            android:popupBackground="@color/white"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="0.6"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectanglebg"
            android:entries="@array/land_use"
            android:popupBackground="@color/white"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="5dp">

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectanglebg" />

        <TextView
            android:id="@+id/text_dummy_hint_remarks"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Remarks"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:visibility="invisible"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/ti4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:hint="Remarks"
            android:textColorHint="#707070"
            android:layout_marginTop="-30dp"
            app:hintTextAppearance="@style/HintTextStyle">

            <EditText
                android:id="@+id/edit_remarks"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@android:color/transparent"
                android:inputType="text|textMultiLine"
                android:maxLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#707070"
            android:text="0/50"
            android:textAlignment="viewEnd"/-->
    </RelativeLayout>

       <!--Incident Reason-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="5dp">

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectanglebg" />

        <TextView
            android:id="@+id/text_dummy_hint_reason"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Incident Reason"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:visibility="invisible"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/ti5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:hint="Incident Reason"
            android:textColorHint="#707070"
            android:layout_marginTop="-30dp"
            app:hintTextAppearance="@style/HintTextStyle">

            <EditText
                android:id="@+id/edit_reason"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@android:color/transparent"
                android:inputType="text|textMultiLine"
                android:maxLines="3" />
        </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="0.85"
                android:background="@drawable/submit_btn"
                android:text="SUBMIT"/>

            <ImageButton
                android:id="@+id/camera"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="0.15"
                android:layout_marginStart="20dp"
                android:src="@drawable/camera" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>


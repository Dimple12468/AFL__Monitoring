                <!--Farmer Name-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp">

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectanglebg" />

                    <TextView
                        android:id="@+id/text_dummy_hint_username"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Farmer Name"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="invisible" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:id="@+id/ti1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="16dp"
                        android:hint="Farmer Name"
                        android:textColorHint="#707070"
                        app:hintTextAppearance="@style/HintTextStyle">

                        <EditText
                            android:id="@+id/edit_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/MyEditTextTheme"
                            android:backgroundTint="@android:color/transparent"
                            android:inputType="text|textCapWords"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <!--Father Name-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="5dp">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rectanglebg" />

                    <TextView
                        android:id="@+id/text_dummy_hint_fathername"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Farmer's Father Name"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="invisible" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:id="@+id/ti2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="16dp"
                        android:hint="Farmer's Father Name"
                        android:textColorHint="#707070"
                        app:hintTextAppearance="@style/HintTextStyle">

                        <EditText
                            android:id="@+id/edit_fathername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/MyEditTextTheme"
                            android:backgroundTint="@android:color/transparent"
                            android:inputType="text|textCapWords"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <!--Village Code-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4">

                        <View
                            android:id="@+id/view3a"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectanglebg" />

                        <TextView
                            android:id="@+id/text_dummy_hint_code"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/white"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="Village Code"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <com.google.android.material.textfield.TextInputLayout

                            android:id="@+id/ti3a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="16dp"
                            android:hint="Village Code"
                            android:textColorHint="#707070"
                            app:hintTextAppearance="@style/HintTextStyle">

                            <EditText
                                android:id="@+id/edit_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/MyEditTextTheme"
                                android:backgroundTint="@android:color/transparent"
                                android:inputType="text|textCapWords"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <!--Village Name-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="0.6">

                        <View
                            android:id="@+id/view3b"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectanglebg" />

                        <TextView
                            android:id="@+id/text_dummy_hint_name"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/white"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="Village Name"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:visibility="invisible" />

                        <com.google.android.material.textfield.TextInputLayout

                            android:id="@+id/ti3b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="16dp"
                            android:hint="Village Name"
                            android:textColorHint="#707070"
                            app:hintTextAppearance="@style/HintTextStyle">

                            <EditText
                                android:id="@+id/edit_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/MyEditTextTheme"
                                android:backgroundTint="@android:color/transparent"
                                android:inputType="text|textCapWords"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_district"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rectanglebg"
                    android:popupBackground="@color/white" />

                <!--LinearLayout
        android:id="@+id/x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

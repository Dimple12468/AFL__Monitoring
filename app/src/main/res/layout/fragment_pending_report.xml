            <View
                android:id="@+id/view4a"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectanglebg" />

            <Spinner
                android:id="@+id/s1"

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ado.PendingReport"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <!--Farmer Name-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="5dp">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectanglebg" />

        <TextView
            android:id="@+id/text_dummy_hint_username"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Farmer Name"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:visibility="invisible"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/ti1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:hint="Farmer Name"
            android:textColorHint="#707070"
            app:hintTextAppearance="@style/HintTextStyle">

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textCapWords"
                android:maxLines="1"
                android:backgroundTint="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <!--Father Name-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="5dp">

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectanglebg" />

        <TextView
            android:id="@+id/text_dummy_hint_fathername"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Farmer's Father Name"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:visibility="invisible"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/ti2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:hint="Farmer's Father Name"
            android:textColorHint="#707070"
            app:hintTextAppearance="@style/HintTextStyle">

            <EditText
                android:id="@+id/edit_fathername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textCapWords"
                android:maxLines="1"
                android:backgroundTint="@android:color/transparent"/>
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="5dp">

        <!--Village Code-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4">

            <View
                android:id="@+id/view3a"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectanglebg" />

            <TextView
                android:id="@+id/text_dummy_hint_code"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Village Code"
                android:textSize="16sp"
                android:background="@android:color/white"
                android:visibility="invisible"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/ti3a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="16dp"
                android:hint="Village Code"
                android:textColorHint="#707070"
                app:hintTextAppearance="@style/HintTextStyle">

                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textCapWords"
                    android:maxLines="1"
                    android:backgroundTint="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <!--Village Name-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0.6">

            <View
                android:id="@+id/view3b"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectanglebg" />

            <TextView
                android:id="@+id/text_dummy_hint_name"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Village Name"
                android:textSize="16sp"
                android:background="@android:color/white"
                android:visibility="invisible"
                android:textColor="@color/black"/>

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/ti3b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="16dp"
                android:hint="Village Name"
                android:textColorHint="#707070"
                app:hintTextAppearance="@style/HintTextStyle">

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="text|textCapWords"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_district"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/rectanglebg"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:popupBackground="@color/white"/>

    <!--LinearLayout
        android:id="@+id/x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0.4"
            android:paddingTop="20dp">

            <View
                android:id="@+id/view4a"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectanglebg" />

            <Spinner
                android:id="@+id/s1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:prompt="Fire Status"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"

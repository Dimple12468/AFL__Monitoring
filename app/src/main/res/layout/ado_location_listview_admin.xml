<RelativeLayout android:id="@+id/ado_loaction_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <!--ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ado_name"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/location_circle" /-->

    <TextView
        android:id="@+id/img"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/alp_image"
        android:fontFamily="@font/arial"
        android:gravity="center"
        android:text="A"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/img"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/laddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lname"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/img"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ado_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/laddress"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/img"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone" />

    </RelativeLayout>

<!--/com.facebook.shimmer.ShimmerFrameLayout-->
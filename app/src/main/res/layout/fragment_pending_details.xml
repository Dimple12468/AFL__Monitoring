        app:layout_constraintTop_toBottomOf="@+id/ddadetail_email1" />


    <TextView
        android:id="@+id/adodetail_phone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

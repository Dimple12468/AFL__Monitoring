        android:fontFamily="@font/arial"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/adodetail_phone1"
        app:layout_constraintTop_toBottomOf="@+id/adodetail_email2" />

    <TextView
        android:id="@+id/ddadetail_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="NONE"
        android:fontFamily="@font/arial"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/ddadetail_name1"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/ddadetail_email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

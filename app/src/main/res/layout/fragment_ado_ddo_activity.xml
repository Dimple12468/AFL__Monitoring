<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Admin.AdoDdoActivity.AdoDdoActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/app_bar_admin"
        android:id="@+id/app__bar_in_dda" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ddo_activity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/ddo_activity_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:tabTextColor="#9A9696"
            app:tabSelectedTextColor="#DC5C58"
            android:fontFamily="@font/arial"
            app:tabIndicatorColor="@color/app_color" />

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>